	$('div.modal-body > button.next').on('click', function(e, o) {
		var currentPic = $('#myModal div.modal-body img').data('current-pic');
		var folderSize = $('#myModal div.modal-body img').data('folder-size');		
		var folder = $('#myModal div.modal-body img').data('folder');
		
		if(currentPic < folderSize) {
		
			currentPic++;
			var imgPath = 'img/' + folder + '/' + currentPic +'.png';
			var folderIndicator= currentPic + '/' + folderSize;
			$('#myModal div.modal-body img').data('current-pic', currentPic);
			$('#myModal div.modal-body img').attr('src', imgPath);
			$('#myModal div.modal-heather p' ).text(folderIndicator);
		
		}
		
		toggleModalArrows(currentPic, folderSize);
	});